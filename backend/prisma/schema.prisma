// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @unique @default(uuid())
  email    String    @unique
  username String    @unique
  posts    Post[]
  password String
  Like     Like[]
  Dislike  Dislike[]
  Comment  Comment[]
}

model Post {
  id       String    @id @unique @default(uuid())
  title    String
  content  String?
  author   User      @relation(fields: [authorId], references: [id])
  authorId String
  Comment  Comment[]
  Like     Like[]
  Dislike  Dislike[]
}

model Comment {
  id      String @id @unique @default(uuid())
  content String
  post    Post   @relation(fields: [postId], references: [id])
  postId  String
  user    User   @relation(fields: [userId], references: [id])
  userId  String
}

model Like {
  id     String @id @unique @default(uuid())
  post   Post   @relation(fields: [postId], references: [id])
  postId String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Dislike {
  id     String @id @unique @default(uuid())
  post   Post   @relation(fields: [postId], references: [id])
  postId String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
